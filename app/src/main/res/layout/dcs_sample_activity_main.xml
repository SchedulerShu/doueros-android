<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1c1c"
    android:fitsSystemWindows="true"
    android:id="@+id/root"
    android:orientation="vertical">
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/nz"
        android:layout_alignParentTop="true"
        android:id="@+id/user"
        android:backgroundTint="#fff"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/share"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ae9"
        android:backgroundTint="#fff"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:padding="20dp"
        android:id="@+id/webviewroot"
        android:visibility="invisible"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/contentbg"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/id_sv_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/topLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/songLinearLayout"
        android:gravity="bottom"
        android:visibility="invisible"
        android:id="@+id/controlSeek"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/musicname"
            android:textSize="16sp"
            android:textColor="#b9fcfcfc"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:id="@+id/leftTime"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightTime"
            android:textColor="#fff"
            android:text="00:00"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            />
        <SeekBar
            android:layout_width="280dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_centerVertical="true"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:id="@+id/seekBar"
            android:thumb="@drawable/aep"
            android:thumbTintMode="add"
            android:progressDrawable="@drawable/seek_bar_progress_style"
            />
    </RelativeLayout>
    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alarm"
        app:rb_color="#e09af7de"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        app:rb_radius="22dp"
        app:rb_rippleAmount="6"
        app:rb_duration="1500"
        app:rb_scale="13">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:id="@+id/alarmpic"
            android:background="@drawable/ic_alarm_clock_select"/>
    </com.skyfishjy.library.RippleBackground>
    <LinearLayout
        android:id="@+id/songLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="6dp"
        android:visibility="invisible"
        android:orientation="horizontal"
        android:layout_above="@+id/contentbottom"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/previousSongBtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/prebg"
            android:layout_marginRight="50dp"
            />

        <Button
            android:id="@+id/pauseOrPlayBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/playbg"
            android:layout_marginRight="50dp"
             />

        <Button
            android:id="@+id/nextSongBtn"
            android:layout_width="34dp"
            android:background="@drawable/nextbg"
            android:layout_height="34dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_time_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/id_tv_RenderVoiceInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/contentbottom"
        app:rb_color="#53f5f5f5"
        android:layout_alignParentBottom="true"
        app:rb_radius="22dp"
        app:rb_rippleAmount="1"
        app:rb_duration="4000"
        app:rb_scale="3">
    </com.skyfishjy.library.RippleBackground>
    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/content"
        app:rb_color="#effcfcfc"
        android:layout_alignParentBottom="true"
        app:rb_radius="22dp"
        app:rb_rippleAmount="3"
        app:rb_duration="1500"
        app:rb_scale="3">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="34dp"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:id="@+id/voiceBtn"
            android:src="@drawable/sub_search_mic"/>
    </com.skyfishjy.library.RippleBackground>

</RelativeLayout>
